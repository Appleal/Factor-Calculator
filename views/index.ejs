<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Document</title>
    <style type="text/css">
        .wrap{
            background:#eee;
            width: 900px;
            height: 400px;
            border-radius:10px;
            border:1px solid #eee;
            padding:20px;
            margin:20px auto;
        }
        #numTxt{
            width: 60%;
            font-size:22px;
            border-radius:10px;
            border:1px solid #eee;
            padding:0 5px;
        }
    </style>
</head>
<body>
<div class="wrap">
    <h1>因数计算器</h1>
    <div class="box">
        <p>请输入数字（1~10000）：</p>
        <p>
            <input type="number" autofocus id="numTxt">
            <button id="btn">查询</button>
        </p>
    </div>
</div>
</body>
<script type="text/javascript">
    var btn = document.getElementById("btn");
    var numTxt = document.getElementById("numTxt");
    btn.onclick = function(){
        var num = Number(numTxt.value); //得到数字
        if(isNaN(num)){
            //isNaN如果输入的不是数字返回true
            alert("请输入正确的数字");
            return;
        }

        if(!(num >= 1 && num <= 10000)){
            alert("请输入1~10000的数字")
            return;
        }

        //点击查询跳转页面
        window.location = "cha/" + num;
    }
</script>
</html>